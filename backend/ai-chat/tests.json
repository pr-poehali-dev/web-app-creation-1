{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "POST with empty messages should return 400",
      "method": "POST",
      "path": "/",
      "body": {
        "messages": []
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST with valid message should return AI response",
      "method": "POST",
      "path": "/",
      "body": {
        "messages": [
          {
            "role": "user",
            "content": "Привет"
          }
        ]
      },
      "expectedStatus": 200,
      "expectedBody": {
        "message": "string",
        "model": "gpt-4o-mini"
      },
      "bodyMatcher": "partial"
    }
  ]
}
